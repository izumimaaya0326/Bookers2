<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample7">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#" style="color: white;font-size: x-large;">
        Bookers
      </a>
    </div>

    <div class="collapse navbar-collapse" id="navbarEexample7">
   <% if user_signed_in? %>

      <ul class="nav navbar-nav navbar-right">
       <li>
        <%= link_to 'Home', user_path(current_user), class:"home" , class: "glyphicon glyphicon-home" %>
       </li>

       <li>
        <%= link_to 'Users', users_path, class:"users" , class: "glyphicon glyphicon-user" %>
       </li>

       <li>
         <%= link_to 'Books', books_path, class:"books" , class: "glyphicon glyphicon-book" %>
       </li>

       <li>
        <%= link_to "log out", destroy_user_session_path, method: :delete, class:"logout" , class: "glyphicon glyphicon-log-out" %>
       </li>
      </ul>

    <% else %>

      <ul class="nav navbar-nav navbar-right">
      <li>
       <%= link_to 'Home',root_path, class:"home" , class: "glyphicon glyphicon-home" %>
      </li>
      <li>
        <%= link_to ' About', about_path ,class:"about" , class: "glyphicon glyphicon-link" %>
      </li>
      <li>
       <%= link_to " sign up", new_user_registration_path, class:"sign_up" , class: "glyphicon glyphicon-edit" %>
      </li>
      <li>
       <%= link_to " log in", new_user_session_path, class:"sign_up" , class: "glyphicon glyphicon-log-in" %>
      </li>
      </ul>
<% end %>
    </div>
  </div>
</nav>

    <%= yield %>
<footer>
  <div class="container">
  <div class="row">
    <div class="col-xs-3 col-xs-offset-9">
      <p>CopyRight Infratop.inc</p>
    </div>
  </div>
</div>
</footer>
  </body>
</html>

