<div class="container">

<div class="flash">
        <%= flash[:notice] %>
      </div>

<%= render 'books/list', book:@book, user: @user %>

<div class="col-xs-9">
	<h1>Books</h1>
	<table class="table table-hover table-inverse">
		<thead>
			<tr>
				<th></th>
				<th><P>title</P></th>
				<th><P>opinion</P></th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>

				<tr class="new-table">
					<td><span>
						<%= link_to user_path(book.user) ,class:"user_#{book.user.id}" do %>
							 <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50, format: 'jpeg',fallback: "no_image.jpg",size: '50x50' %>
					 	<% end %>
					 </span>
					</td>
					<a>
					<td><span><%= link_to book.title, "/books/#{book.id}",class:"book_#{book.id}"%></span></td>
					<td><span><%= book.opinion %></span></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>
