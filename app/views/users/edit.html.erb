<div class="container">

<h1>User info</h1>
<% if @user.errors.any? %>
      <h2 style="color:red"><%= @user.errors.count %> error prohibited this obj from being saved:</h2>
      <ul>
		<% @user.errors.full_messages.each do |message| %>
      <li style="color:red"><%= message %></li>
        <% end %>
       </ul>
        <% end %>


<%= form_for(@user) do |f|%>

<h4>Name</h4><%= f.text_field :username ,class:"name"%>

 <h4>Image</h4><%= f.attachment_field :profile_image,class:"user_image" %>

<h4>Introduction</h4><%= f.text_area :introduction ,class:"introduction" %><br>

<%= f.submit 'Update User'%>

<% end %>