<div class="login" style="padding-top: 70px;">


<div class="body">
  <div class="container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :Name %><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "name", id:"inputName",class:"name" %>
    </div>

  <div class="field">
    <%= f.label :password %><br />
    <%= f.password_field :password, autocomplete: "current-password",class:"password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" ,class:"sign_in"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
